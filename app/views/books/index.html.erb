<h1>Books</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>Show</td>
      <td>Edit</td>
      <td>Destroy</td>
    <% end %>
  </tbody>
</table>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
  Title</br>
  <%= f.text_field :title %></br>
 <p>Body</br>
  <%= f.text_area :body %></br></p>
  <%= f.submit 'create Book' %>
<% end %>